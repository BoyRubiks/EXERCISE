import java.util.Scanner;

public class GrossPayCalculator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

    
        System.out.print("Enter the annual salary: ");
        float annualSalary = scanner.nextFloat();
        System.out.print("Enter the number of pay periods: ");
        int numberOfPayPeriods = scanner.nextInt();

       
        float grossPayPerPayPeriod = annualSalary / numberOfPayPeriods;

        
        System.out.println("The gross pay per pay period is " + grossPayPerPayPeriod);
        
        scanner.close();
    }
}
